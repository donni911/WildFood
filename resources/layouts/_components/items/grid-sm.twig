<div class="c-scroll overflow-x-scroll">
    <table class="table-auto border-collapse mb-2">
        <thead>
            <tr>
                <th class="c-border sticky z-10 left-0 bg-body p-4 before:rounded-ss-xl before:bg-local before:content-[''] before:absolute before:inset-0">
                    <div class='top-4 absolute [&>svg]:w-12 [&>svg]:h-12'>
                        {% include "../../_app/icon.twig" with {id: 'pet-food', classIcon: '' } %}
                    </div>
                </th>
                {% for item in titles %}
                    <th class="px-4 py-2 bg-white last:rounded-se-xl">
                        <div class='flex w-[115px] items-start gap-2 flex-col justify-start '>
                            <div class=''>
                                {% include "../../_app/icon.twig" with {id: item.icon, classIcon: 'w-5 h-5' } %}
                            </div>
                            <p class='text-start font-semibold text-xs text-primary'>
                                {{ item.title }}
                            </p>
                        </div>
                    </th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for advantage in advantages %}
                <tr>
                    <td class="sticky z-10 left-0 bg-body p-4 {% if loop.last %} before:rounded-es-xl {% endif %} before:bg-local before:content-[''] before:absolute before:inset-0">
                        <div class='w-[90px] relative z-20'>
                            {% if advantage.title == 'Wildfood' %}
                                {% include "../../_app/logo.twig" with { class: 'w-18' } %}
                            {% else %}
                                <p class='text-xs font-cooper'>
                                    {{ advantage.title }}
                                </p>
                            {% endif %}
                        </div>
                    </td>

                    {% for good in advantage.goods %}
                        <td class="relative px-4 border-t-2 border-local py-3 pl-6 bg-white {% if loop.parent.loop.last %} last:rounded-ee-xl {% endif %} {% if loop.first %} c-border-top {% endif %} {% if loop.last %} c-border-last {% endif %}">
                            <div class='w-[115px] font-bold leading-none {% if good.positive %} text-[#8EA43D] {% else %} text-[#E45B44] {% endif %}'>
                                {{ good.text }}
                            </div>
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

