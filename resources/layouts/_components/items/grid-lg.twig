<table class="table-auto border-collapse w-full js-expand-table">
    <thead>
        <tr>
            <th class="">
                <div class='top-4 absolute'></div>
            </th>
            {% for advantage in advantages %}
                <th class="pb-5 xl:pb-7 max-w-[200px] min min-w-[170px]-xl:w-[195px]">
                    <div class='flex items-center justify-center'>
                        {% if advantage.title == 'Wildfood' %}
                            {% include "../../_app/logo.twig" with { class: 'w-[100px] xl:w-[120px]' } %}
                        {% else %}
                            <p class='text-5 xl:text-[32px] leading-none flex flex-col items-center font-cooper'>
                                {{ advantage.title }}
                                <span class='text-xs'>
                                    {{ advantage.subtitle }}
                                </span>
                            </p>
                        {% endif %}
                    </div>
                </th>
            {% endfor %}
        </tr>
    </thead>

    <tbody>
        {% for title in titles %}
            {% if loop.first %}
                <tr>
                    <td class="max-w-[320px] min-w-[200px] p-4 pl-5 pt-7 xl:p-[24px] xl:pt-10 xl:pl-[32px] bg-local {% if loop.first %} rounded-ss-[32px] {% endif %} {% if loop.last %} rounded-se-[32px] {% endif %}">
                        <div class='flex gap-4 items-center'>

                            {% include "../../_app/icon.twig" with {id: title.icon, classIcon: 'w-5 h-5' } %}

                            <p class='text-start font-semibold text-4 xl:text-5 text-primary'>
                                {{ title.title }}
                            </p>
                        </div>
                    </td>
                    {% for advantage in advantages %}
                        {% set index = advantage.goods[loop.parent.loop.index - 1] %}
                        <td class="p-4 xl:p-[24px] max-w-[200px] min-w-[170px] xl:min-w-[195px] relative bg-local {% if loop.last %} rounded-se-[32px] {% endif %} {% if index.border %} before:content-[''] before:absolute before:inset-0 before:bg-white before:rounded-t-[24px] {% endif %}">
                            <div class='relative z-10 font-bold flex items-center justify-center leading-none {% if index.positive %} text-[#8EA43D] {% else %} text-[#E45B44] {% endif %}'>
                                <p class='text-4 xl:text-5 text-center'>
                                    {{ index.text }}</p>
                            </div>
                        </td>
                    {% endfor %}
                </tr>
            {% else %}
                <tr class='{% if loop.index == 6 %} el-active {% endif %} {% if loop.index >= 7 %} el-hidden {% endif %}'>
                    <td class="max-w-[320px] min-w-[200px] p-4 pl-5 xl:p-[24px] xl:pl-[32px] bg-local {% if loop.first %} rounded-ss-[32px] {% endif %}">
                        <div class='flex gap-4 items-center'>

                            {% include "../../_app/icon.twig" with {id: title.icon, classIcon: 'w-5 h-5' } %}

                            <p class='text-start font-semibold text-4 xl:text-5 text-primary'>
                                {{ title.title }}
                            </p>
                        </div>
                    </td>
                    {% for advantage in advantages %}
                        {% set index = advantage.goods[loop.parent.loop.index - 1] %}
                        <td class="p-4 xl:p-[24px] min-w-[170px] xl:max-w-[200px] xl:min-w-[195px] relative bg-local {% if index.border %} before:content-[''] before:absolute before:inset-0 before:bg-white {% endif %}">
                            <div class='font-bold flex items-center justify-center leading-none relative z-10 {% if index.positive %} text-[#8EA43D] {% else %} text-[#E45B44] {% endif %}'>
                                <p class='text-4 xl:text-5 text-center'>
                                    {{ index.text }}
                                </p>
                            </div>
                        </td>
                    {% endfor %}
                </tr>
            {% endif %}
        {% endfor %}
    </tbody>
</table>
