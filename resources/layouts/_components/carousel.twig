{% set items = [
    {
        icon:'carousel-icon-1',
        title:'Wheat gluten, dairy, GMO and soy free'
    },
    {
        icon:'carousel-icon-2',
        title:'No additives, natural flavor only'
    },
    {
        icon:'carousel-icon-3',
        title:'No artificial preservatives added'
    },
