{% extends '_templates/base.twig' %}

{% set pageTitle = 'Список сторінок' %}
{% set pageId = 'index' %}
{# {% set styleLinks = ['home'] %} #}
{# {% set htmlClass = 'is-nospace' %} #}

    {% block content %}
        <div class="l-container"> <div class="text-primary mt-pageSpace">
            {% if pages is empty %}
                <div class="font-bold text-3xl text-gray-400 h-[250px] flex justify-center items-center">Сторінки відсутні
                </div>
            {% else %}
                {% for page in pages %}
                    {% if page.slug != 'index' %}
                        <div class="relative md:flex md:items-center p-2  md:px-6 hover:bg-local transition-colors">
                            <div class="md:flex-grow">
                                <a href="{{ page.html }}" class="block font-bold leading-5 text-md f-btn--overlay">
                                    {{ page.title }}
                                </a>
                                <div class="mt-1 text-sm leading-5 text-smoke-light">{{ page.html }}</div>
                            </div>

                            <div class="flex items-center mt-2 md:mt-0 md:ml-4">
                                <div class="mr-2">
                                    <div class="px-2 py-1 inline-flex text-xs leading-5 rounded-full {{ page.desktop ? 'bg-green-500' : 'bg-red-500' }} text-white">
                                        Desktop
                                    </div>
                                </div>

                                <div>
                                    <div class="px-2 py-1 inline-flex text-xs leading-5 rounded-full {{ page.responsive ? 'bg-green-500' : 'bg-red-500' }} text-white">
                                        Responsive
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %}
